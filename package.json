{
  "name": "bullish-beginner-scanner",
  "version": "0.1.15",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev:web": "vite",
    "dev:electron": "wait-on tcp:5173 && electron electron/main.cjs",
    "dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 concurrently \"npm:dev:web\" \"npm:dev:electron\"",
    "typecheck": "tsc -b",
    "build:web": "vite build",
    "build": "npm run typecheck && npm run build:web",
    "pack:win": "electron-builder -w  --publish never -c.extraMetadata.main=electron/main.cjs",
    "pack:mac": "electron-builder -m  --publish never -c.extraMetadata.main=electron/main.cjs",
    "pack:linux": "electron-builder -l  --publish never -c.extraMetadata.main=electron/main.cjs",
    "cut:patch": "npm version patch -m \"chore: release %s\" && git push && git push --tags",
    "cut:minor": "npm version minor -m \"chore: release %s\" && git push && git push --tags",
    "cut:major": "npm version major -m \"chore: release %s\" && git push && git push --tags"
  },
  "build": {
    "appId": "com.bullish.beginner.scanner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**",
      "electron/**"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "BullishScanner-${version}-win.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "artifactName": "BullishScanner-${version}-mac.${ext}"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "BullishScanner-${version}-linux.${ext}"
    }
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recharts": "2.12.7",
    "@radix-ui/react-popover": "1.0.7",
    "lucide-react": "0.441.0",
    "electron-updater": "6.3.9"
  },
  "devDependencies": {
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "@vitejs/plugin-react": "4.2.0",
    "autoprefixer": "10.4.19",
    "postcss": "8.4.41",
    "tailwindcss": "3.4.10",
    "typescript": "5.5.4",
    "vite": "5.4.1",
    "electron": "31.4.0",
    "electron-builder": "24.13.3",
    "concurrently": "8.2.2",
    "wait-on": "7.2.0",
    "cross-env": "7.0.3"
  }
}
